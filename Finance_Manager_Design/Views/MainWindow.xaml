                            <Label.Content>

                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Operation 1" VerticalAlignment="Center" Margin="10 0 0 0 "></TextBlock>
                                    <StackPanel VerticalAlignment="Center">
                                        <TextBlock Text="Money" Margin="40 0 0 0"></TextBlock>
