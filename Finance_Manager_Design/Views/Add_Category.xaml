<Window x:Class="Finance_Manager_Design.Add_Category"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Finance_Manager_Design"
        mc:Ignorable="d"
         Background="#34405E"
        Title="Add_Category" Height="240" Width="300">
    <Grid>
        <Border  Margin="0 0 0 0" Background="#737C94"  VerticalAlignment='Center' HorizontalAlignment="Center" Padding="10" CornerRadius="40" Width="240" Height="180" >
            <StackPanel Width="240" Height="240">
                <Label Margin="0 20 0 0" Content="Enter name:" Foreground="White"></Label>
                <TextBox Cursor="IBeam" BorderBrush="White" Foreground="White"></TextBox>
            
                <StackPanel Orientation="Horizontal" Height="62">
                    <Button VerticalAlignment="Bottom" x:Name="b_add" Margin="20 0 0 10" Background="#07C681" Height="25" Width="76" BorderThickness="0" Content="Add" FontSize="10" Cursor="Hand"/>
                    <Button VerticalAlignment="Bottom" Margin="20 0 0 10 " x:Name="b_delete"  Background="#CC3358" Height="25" Width="76"  BorderThickness="0" Content="Cancel" FontSize="10" Cursor="Hand"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window>
